{
  "name": "netlock",
  "productName": "netlock",
  "version": "1.0.0",
  "description": "A simple application to configure consumer grade routers for the average user.",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "keywords": [],
  "author": "",
  "contributors": [
    "Austin Conn",
    "Andrew Hooper"
  ],
  "license": "",
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "depends": [
              "libgconf-2-4"
            ]
          },
          "platforms": [
            "linux"
          ]
        }
      ],
      "packagerConfig": {
        "executableName": "netlock",
        "packageManager": "npm",
        "prune": true,
        "ignore": [
          "\\.git(ignore|config|attributes)",
          "/package-lock\\.json",
          "/README\\.md",
          "package.json.bak",
          "references.txt",
          "requirements.txt",
          ".venv",
          "backend_src",
          "scripts",
          "build",
          "todo.txt"
        ]
      }
    }
  },
  "dependencies": {
    "minimist": ">=1.2.2",
    "chromium": "^2.1.2",
    "electron-chromedriver": "^8.0.0",
    "electron-compile": "^6.4.4",
    "electron-in-page-search": "^1.3.2",
    "electron-log": "^4.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "path": "^0.12.7",
    "python-shell": "^1.0.7",
    "zerorpc": "^0.9.7"
  },
  "devDependencies": {
    "electron": "^1.8.4",
    "@electron-forge/cli": "^6.0.0-beta.46",
    "@electron-forge/maker-deb": "^6.0.0-beta.46",
    "@electron-forge/maker-dmg": "^6.0.0-beta.46",
    "@electron-forge/maker-rpm": "^6.0.0-beta.46",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.46",
    "@electron-forge/maker-zip": "^6.0.0-beta.46",
    "electron-rebuild": "^1.8.8"
  }
}
